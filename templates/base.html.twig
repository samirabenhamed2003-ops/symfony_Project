<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Se7a 3ltayer{% endblock %}</title>

    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Custom CSS build (Webpack Encore) #}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

    <style>
        /* Logo navbar */
        .navbar-brand .logo {
            width: 50px;       /* largeur fixe raisonnable */
            height: 50px;      /* garder proportions */
            object-fit: cover; /* recadrage propre */
            border-radius: 8px; /* optionnel : coins arrondis */
        }

        .navbar-brand .brand-title {
            font-weight: 700;
            font-size: 1.25rem;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('home_public') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Se7a 3al tayer" class="logo">
            <span class="brand-title">Se7a 3al tayer</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav ms-auto align-items-lg-center">
                <li class="nav-item"><a class="nav-link" href="{{ path('home_public') }}">ACCUEIL</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('about') }}">QUI SOMMES-NOUS ?</a></li>
                <li class="nav-item"><a class="nav-link" href="#">PRATICIENS</a></li>
                <li class="nav-item"><a class="nav-link" href="#">CONTACT</a></li>
                <li class="nav-item ms-3">
                    <a class="btn btn-outline-success btn-sm" href="{{ path('app_login') }}">SE CONNECTER</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main content -->
<main class="py-4">
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white pt-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>Se7a 3ltayer</h5>
                <p>Cabinet médical • Tunis</p>
            </div>
            <div class="col-md-4">
                <h6>Liens utiles</h6>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white small">Praticiens</a></li>
                    <li><a href="#" class="text-white small">Services</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h6>Contact</h6>
                <p class="small mb-0">Tel: +216 00 000 000</p>
                <p class="small">Email: contact@se7a3ltayer.tn</p>
            </div>
        </div>

        <div class="text-center small py-3">© {{ "now"|date("Y") }} Se7a 3ltayer</div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
