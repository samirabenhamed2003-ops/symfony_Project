{% extends 'base.html.twig' %}

{% block title %}Accueil - Se7a 3ltayer{% endblock %}

{% block body %}
<div class="row g-4">

    <!-- SIDEBAR -->
    <aside class="col-lg-3">
        <!-- Categories -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h6 class="fw-bold text-uppercase text-muted small">Catégories</h6>
                <ul class="list-unstyled mt-3">
                    {% for cat in [
                        'Médecine générale',
                        'Pédiatrie',
                        'Cardiologie',
                        'Radiologie',
                        'Analyses médicales'
                    ] %}
                        <li class="mb-2">
                            <a href="#" class="text-dark text-decoration-none d-block py-1">
                                {{ cat }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Promo Card -->
        <div class="card shadow-sm">
            <img src="{{ asset('images/promo_banner.jpg') }}" class="card-img-top" alt="promo">
            <div class="card-body">
                <h6 class="fw-bold">Promotion du mois</h6>
                <p class="small mb-0 text-muted">Bilan complet à <strong>-20%</strong> durant tout le mois.</p>
            </div>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <section class="col-lg-9">

        <!-- Slider -->
        <div id="mainSlider" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner rounded shadow-sm">
                {% set slides = [
                    {
                        img: 'medical1.jpg',
                        title: 'Bienvenue à Se7a 3ltayer',
                        text: 'Soins de qualité, médecins expérimentés.',
                        btn: true
                    },
                    {
                        img: 'medical2.jpg',
                        title: 'Analyses & Diagnostics',
                        text: 'Équipements modernes, résultats rapides.',
                        btn: false
                    },
                    {
                        img: 'medical3.jpg',
                        title: 'Urgences 24/7',
                        text: 'Une équipe prête à intervenir.',
                        btn: false
                    }
                ] %}

                {% for slide in slides %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ asset('images/slider/' ~ slide.img) }}" class="d-block w-100" alt="slide">
                        <div class="carousel-caption d-none d-md-block text-start">
                            <h2 class="fw-bold">{{ slide.title }}</h2>
                            <p>{{ slide.text }}</p>

                            {% if slide.btn %}
                                <a class="btn btn-success btn-sm" href="{{ path('app_login') }}">
                                    Prendre rendez-vous
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- Services Section -->
        <h5 class="mb-3 fw-bold">Nos services populaires</h5>

        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">

            {% set services = [
                {
                    img: 'consultation.jpg',
                    title: 'Consultation générale',
                    desc: 'Prise en charge complète par nos médecins.'
                },
                {
                    img: 'analyse.jpg',
                    title: 'Analyses médicales',
                    desc: 'Rapides et fiables.'
                },
                {
                    img: 'radiologie.jpg',
                    title: 'Radiologie',
                    desc: 'Imagerie moderne pour diagnostics précis.'
                }
            ] %}

            {% for serv in services %}
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="{{ asset('images/services/' ~ serv.img) }}" class="card-img-top" alt="service">
                        <div class="card-body">
                            <h6 class="card-title fw-bold">{{ serv.title }}</h6>
                            <p class="text-muted small">{{ serv.desc }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Why Choose Us -->
        <div class="p-4 bg-light border rounded shadow-sm mb-4">
            <h5 class="fw-bold">Pourquoi nous choisir ?</h5>
            <p class="mb-0 text-muted">
                Équipe pluridisciplinaire, équipements modernes, suivi personnalisé, et service patient premium.
            </p>
        </div>

    </section>
</div>
{% endblock %}
