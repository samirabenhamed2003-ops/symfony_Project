{% extends 'dashboard_base.html.twig' %}

{% block title %}Dashboard Médecin{% endblock %}

{% block page_title %}Dashboard Médecin{% endblock %}

{% block sidebar_menu %}
    <a href="{{ path('medecin_dashboard') }}" class="menu-item active">
        <i class="bi bi-speedometer2"></i>
        <span>Dashboard</span>
    </a>
    <a href="{{ path('medecin_patients') }}" class="menu-item">
        <i class="bi bi-people"></i>
        <span>Mes Patients</span>
    </a>
    <a href="{{ path('app_home') }}" class="menu-item">
        <i class="bi bi-house"></i>
        <span>Accueil</span>
    </a>
{% endblock %}

{% block body %}
    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card stat-card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total</p>
                            <h3 class="stat-number text-primary mb-0">{{ stats.total }}</h3>
                        </div>
                        <div class="fs-1 text-primary opacity-25">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">En Attente</p>
                            <h3 class="stat-number text-warning mb-0">{{ stats.en_attente }}</h3>
                        </div>
                        <div class="fs-1 text-warning opacity-25">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Validés</p>
                            <h3 class="stat-number text-success mb-0">{{ stats.valides }}</h3>
                        </div>
                        <div class="fs-1 text-success opacity-25">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stat-card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Refusés</p>
                            <h3 class="stat-number text-danger mb-0">{{ stats.refuses }}</h3>
                        </div>
                        <div class="fs-1 text-danger opacity-25">
                            <i class="bi bi-x-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres et Recherche -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('medecin_dashboard') }}" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Statut</label>
                    <select name="statut" class="form-select">
                        <option value="tous" {{ statut_filter == 'tous' ? 'selected' : '' }}>Tous</option>
                        <option value="en_attente" {{ statut_filter == 'en_attente' ? 'selected' : '' }}>En attente</option>
                        <option value="valide" {{ statut_filter == 'valide' ? 'selected' : '' }}>Validés</option>
                        <option value="refuse" {{ statut_filter == 'refuse' ? 'selected' : '' }}>Refusés</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Recherche</label>
                    <input type="text" name="search" class="form-control" placeholder="Nom, email, téléphone..." value="{{ search }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" name="date" class="form-control" value="{{ date_filter }}">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                </div>
                <div class="col-md-12">
                    <a href="{{ path('medecin_dashboard') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-counterclockwise"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des rendez-vous -->
    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Rendez-vous ({{ rendezvous|length }})</h5>
        </div>
        
        {% if rendezvous is empty %}
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted"></i>
                <p class="text-muted mt-3">Aucun rendez-vous trouvé.</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Patient</th>
                            <th>Contact</th>
                            <th>Date/Heure</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rdv in rendezvous %}
                            <tr>
                                <td><strong>#{{ rdv.id }}</strong></td>
                                <td>
                                    <strong>{{ rdv.nom }}</strong><br>
                                    <small class="text-muted">{{ rdv.specialite }}</small>
                                </td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope"></i> {{ rdv.email }}<br>
                                        <i class="bi bi-telephone"></i> {{ rdv.telephone }}
                                    </small>
                                </td>
                                <td>
                                    <strong>{{ rdv.dateRdv|date('d/m/Y') }}</strong><br>
                                    <small class="text-muted">{{ rdv.heureRdv|date('H:i') }}</small>
                                </td>
                                <td>
                                    {% if rdv.statut == 'en_attente' %}
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    {% elseif rdv.statut == 'valide' %}
                                        <span class="badge bg-success">Validé</span>
                                    {% elseif rdv.statut == 'refuse' %}
                                        <span class="badge bg-danger">Refusé</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('medecin_rdv_details', {id: rdv.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        {% if rdv.statut == 'en_attente' %}
                                            <form method="post" action="{{ path('medecin_rdv_accepter', {id: rdv.id}) }}" style="display:inline;">
                                                <button type="submit" class="btn btn-success" onclick="return confirm('Accepter ce rendez-vous ?')" title="Accepter">
                                                    <i class="bi bi-check"></i>
                                                </button>
                                            </form>
                                            <form method="post" action="{{ path('medecin_rdv_refuser', {id: rdv.id}) }}" style="display:inline;">
                                                <button type="submit" class="btn btn-danger" onclick="return confirm('Refuser ce rendez-vous ?')" title="Refuser">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <!-- Prochains rendez-vous -->
    {% if rdv_avenir is not empty %}
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-calendar3"></i> Prochains Rendez-vous</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for rdv in rdv_avenir %}
                        <div class="col-md-6 mb-3">
                            <div class="border rounded p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <strong>{{ rdv.nom }}</strong>
                                        <span class="badge bg-info ms-2">{{ rdv.specialite }}</span>
                                    </div>
                                    <a href="{{ path('medecin_rdv_details', {id: rdv.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> {{ rdv.dateRdv|date('d/m/Y') }} à {{ rdv.heureRdv|date('H:i') }}<br>
                                    <i class="bi bi-envelope"></i> {{ rdv.email }}
                                </small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
