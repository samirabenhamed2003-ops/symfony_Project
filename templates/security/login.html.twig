{% extends 'base.html.twig' %}

{% block title %}Connexion / Inscription{% endblock %}

{% block stylesheets %}
<style>
body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: #f0f2f5;
}

.container-auth {
    display: flex;
    min-height: 100vh;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.auth-card {
    display: flex;
    width: 900px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
    background: #fff;
    transition: transform 0.3s ease;
}

.auth-card:hover {
    transform: translateY(-5px);
}

.auth-left {
    flex: 1;
    position: relative;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 40px 30px;
    background: url('{{ asset("images/img.jpg") }}') center/cover no-repeat;
    border-right: 1px solid rgba(255,255,255,0.1);
}

.auth-left::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 0;
}

.auth-left h2,
.auth-left p {
    position: relative;
    z-index: 1;
}

.auth-left h2 {
    font-size: 2rem;
    margin: 0;
    font-weight: 700;
}

.auth-left p {
    margin-top: 15px;
    font-size: 1.1rem;
}

.auth-right {
    flex: 1;
    padding: 50px 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.auth-right h3 {
    margin-bottom: 25px;
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    text-align: center;
}

.auth-right form {
    margin-top: 10px;
}

.auth-right .form-control {
    width: 100%;
    padding: 12px 15px;
    margin-bottom: 15px;
    border-radius: 10px;
    border: 1px solid #ddd;
    font-size: 1rem;
}

.auth-right .form-check {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.auth-right .form-check label {
    margin-left: 8px;
    font-size: 0.95rem;
    color: #555;
}

.auth-right button[type="submit"] {
    width: 100%;
    padding: 12px 0;
    border-radius: 10px;
    background: #28a745;
    color: #fff;
    font-weight: 600;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    transition: background 0.3s ease;
}

.auth-right button[type="submit"]:hover {
    background: #218838;
}

.btn-social {
    width: 100%;
    padding: 12px 0;
    border-radius: 10px;
    border: none;
    font-weight: 500;
    margin-bottom: 10px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.btn-google {
    background: #db4437;
    color: #fff;
}

.btn-google:hover {
    background: #c23321;
}

.btn-facebook {
    background: #3b5998;
    color: #fff;
}

.btn-facebook:hover {
    background: #2d4373;
}

.auth-right a {
    text-decoration: none;
    color: #555;
    font-size: 0.95rem;
    display: block;
    text-align: center;
    margin-top: 15px;
}

@media (max-width: 900px) {
    .auth-card {
        flex-direction: column;
        width: 100%;
        border-radius: 15px;
    }
    .auth-left {
        height: 250px;
        border-right: none;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
}
</style>
{% endblock %}

{% block body %}
<div class="container-auth">
    <div class="auth-card">
        <div class="auth-left">
            <h2>Bienvenue chez Se7a 3ltayer</h2>
            <p>Votre santé, notre priorité</p>
        </div>
        <div class="auth-right">
            <h3>Se connecter</h3>

            {# Formulaire Symfony #}
            <form method="post" action="{{ path('app_login') }}">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <input type="email" name="email" class="form-control" placeholder="Email" value="{{ last_username }}" required>
                <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-check">
                    <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                <button type="submit">Se connecter</button>
            </form>

            {# Boutons sociaux en bas #}

            <p class="mt-3">Prendre un rendez-vous ? 
                <a href="{{ path('app_rendez_vous') }}">Réserver maintenant</a>
            </p>

            <button class="btn-social btn-google">
                <img src="{{ asset('images/g.jpg') }}" alt="Google" style="height:20px; vertical-align:middle; margin-right:8px;">
            </button>

        </div>
    </div>
</div>
{% endblock %}
