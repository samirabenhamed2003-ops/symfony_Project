{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
<style>
/* ---------------- GENERAL ---------------- */
body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: #e3f2fd;
}

.container-auth {
    display: flex;
    min-height: 100vh;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

/* ---------------- CARD ---------------- */
.auth-card {
    display: flex;
    width: 650px;
    border-radius: 25px;
    overflow: hidden;
    background: #ffffff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
}

.auth-card:hover {
    transform: translateY(-3px);
}

/* ---------------- LEFT SIDE ---------------- */
.auth-left {
    flex: 1;
    padding: 40px 30px;
    background: linear-gradient(135deg, #42a5f5, #478ed1);
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.auth-left h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
}

.auth-left p {
    margin-top: 15px;
    font-size: 1rem;
    opacity: 0.9;
}

/* ---------------- RIGHT SIDE ---------------- */
.auth-right {
    flex: 1;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.auth-right h3 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 1.8rem;
    font-weight: 700;
    color: #333;
}

/* ---------------- SOCIAL BUTTONS ---------------- */
.social-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-bottom: 25px;
}

.btn-social {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.2s ease, background 0.3s ease;
}

.btn-social:hover {
    transform: translateY(-2px);
}

.btn-google {
    background: #e0e0e0;
}

.btn-facebook {
    background: #d6d6d6;
}

/* ---------------- FORM ---------------- */
.auth-right .form-control {
    width: 100%;
    padding: 12px 15px;
    margin-bottom: 15px;
    border-radius: 12px;
    border: 1px solid #ccc;
    font-size: 1rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.auth-right .form-control:focus {
    border-color: #42a5f5;
    outline: none;
    box-shadow: 0 0 5px rgba(66,165,245,0.4);
}

.auth-right button[type="submit"] {
    width: 100%;
    padding: 12px 0;
    margin-top: 5px;
    border: none;
    border-radius: 12px;
    background: #42a5f5;
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
}

.auth-right button[type="submit"]:hover {
    background: #1e88e5;
}

.auth-right a {
    text-align: center;
    display: block;
    margin-top: 15px;
    font-size: 0.95rem;
    color: #555;
    text-decoration: none;
}

.auth-right a:hover {
    text-decoration: underline;
}

/* ---------------- RESPONSIVE ---------------- */
@media (max-width: 900px) {
    .auth-card {
        flex-direction: column;
        width: 100%;
        border-radius: 20px;
    }

    .auth-left {
        height: 220px;
        padding: 25px;
        border-radius: 20px 20px 0 0;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="container-auth">
    <div class="auth-card">

        <!-- LEFT SIDE -->
        <div class="auth-left">
            <h2>Bienvenue chez Se7a 3ltayer</h2>
            <p>Créez votre compte pour accéder aux services médicaux et suivre votre santé facilement.</p>
        </div>

        <!-- RIGHT SIDE -->
        <div class="auth-right">
            <h3>S'inscrire</h3>



            <!-- Registration Form -->
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {
                    attr: { class: 'form-control', placeholder: 'Adresse e-mail' }
                }) }}

                {{ form_row(registrationForm.plainPassword.first, {
                    attr: { class: 'form-control', placeholder: 'Mot de passe' }
                }) }}

                {{ form_row(registrationForm.plainPassword.second, {
                    attr: { class: 'form-control', placeholder: 'Confirmer le mot de passe' }
                }) }}

                <button type="submit">Créer mon compte</button>
            {{ form_end(registrationForm) }}
                        <!-- Social Login -->
            <div class="social-buttons">
                <button class="btn-social btn-google">
                    <img src="{{ asset('images/g.jpg') }}" width="22" alt="Google">
                </button>
                <button class="btn-social btn-facebook">
                    <img src="{{ asset('images/f.jpg') }}" width="22" alt="Facebook">
                </button>
            </div>

            <a href="{{ path('app_login') }}">Déjà un compte ? Se connecter</a>
        </div>
        

    </div>
</div>
{% endblock %}
